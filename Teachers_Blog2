      <script type="text/javascript">
    
window.onscroll = changePos;

function changePos() {
    var menu = document.getElementById("navmenu");
   
    if (window.pageYOffset > 300) 
    {
        menu.style.position = "fixed";
        menu.style.top = "0";
    } else {
        menu.style.position = "";
        menu.style.top = "";
    }
}
</script>

